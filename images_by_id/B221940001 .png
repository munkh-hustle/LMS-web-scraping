            function CheckValidation(Email, Password) {
                var EmailValid = false;
                var PasswordValid = false;

                if (Email == '') {
                    EmailValid = false;
                    $("#email_error").html('Хэрэглэгчийн нэрээ оруулна уу.');
                    $("#email_error").css('display', 'inline-block');
                }
                else if (Email != '') {
                    EmailValid = true;
                    $("#email_error").css('display', 'none');
                }

                if (Password == '') {
                    PasswordValid = false;
                    $("#password_error").html('Нууц үгээ оруулна уу.');
                    $("#password_error").css('display', 'inline-block');
                }
                else if (Password != '') {
                    PasswordValid = true;
                    $("#password_error").css('display', 'none');
                }

                if ((EmailValid == false) || (PasswordValid == false))
                    return false;
                else
                    return true;
            }

        });       
